

  <!-- Close button-->
    <div class="button--x-infowindow container d-flex justify-content-end mt-2 mb-3 me-0 p-0">
      <%= link_to "", root_path, class: "fa-solid fa-circle-xmark fa-xl", style: "color: #ff00f5;float:right;" %>
    </div>


  <!-- TTT content -->
  <div class="match-title">
    <h5><%= pingpong_table.name %></h5>

    <% if pingpong_table.availability %>
      <%= image_tag "icons8-green-dot-48.png", {height: 20, width: 20} %> AVAILABLE 😃
    <% else %>
      <%= image_tag "icons8-red-dot-48.png", {height: 20, width: 20} %> OCCUPIED  😵‍💫
    <% end %>
  </div>

  <!-- "See More" button -->
  <div class="details-select center mt-2">
    <%= link_to "See more", pingpong_table_path(pingpong_table), class: "button--seemore center" %>
  </div>
