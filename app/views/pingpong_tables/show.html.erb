  <div class="details1 mt-3">
    <div class="details1_1">
      <div class="gray--btn center">
        <%= @pingpong_table.category %>
      </div>

      <div class="availability mx-4">
        <% if @pingpong_table.availability == true %>
        <p>    ðŸŸ¢ available ðŸ˜€ </p>
