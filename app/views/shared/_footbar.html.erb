<div class="menu sticky-bottom fixed-bottom center">
  <div class="menu-details mt-3">

     <!-- Home button -->
     <div class="container menutext">
      <% if current_page?(pingpong_tables_path) %>
        <%= link_to "", pingpong_tables_path, class: "fa-solid fa-house", style: "color: #396BEE" %>
      <% else %>
        <%= link_to "", pingpong_tables_path, class: "fa-solid fa-house" %>
      <% end %>

      <% if current_page?(pingpong_tables_path) %>
