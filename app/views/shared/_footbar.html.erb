    <!-- Profile button -->
    <div class="container menutext">
      <% if current_page?(my_profile_path) %>
        <%= link_to "", my_profile_path, class: "fa-solid fa-user", style: "color: #396BEE" %>
      <% else %>
        <%= link_to "", my_profile_path, class: "fa-solid fa-user" %>
      <% end %>

      <% if current_page?(my_profile_path) %>
        <p class="menutext-current">Profile</p>
      <% else %>
