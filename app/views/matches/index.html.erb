<style>
  p { Font-size: 12px !important; }
  h5 { Font-size: 17px !important; }
</style>

<div class="container d-flex justify-content-between mb-2 mt-3">
  <h5 class="text-pingitmatches mt-3 ms-3">Ping it Matches</h5>
  <h5 class="mt-3"><%= link_to "ADD",  new_match_path, class: "text-more mt-3 me-3" %></h5>
</div>


<div class="container">
<% @matches.each do |match| %>
  <% if current_user == match.organiser %>
    <div class="matches-organised d-flex justify-content-evenly m-2">
      <div class="mt-2 flex-shrink-0">
        <div class ="ms-4 mt-4">
          <%= image_tag "profile.png" , style: 'height:70px;width:70px;border-radius:50%;'%>
        </div>
      </div>

      <div class="flex-grow-1 mt-3">
        <div class="match-title center mt-2 me-2">
          <h5><%= match.name %></h5>
        </div>

        <div class="match-matchtime center">
          <p><%= image_tag "calendar.png", {height: 20} %> <%= match.match_time.strftime("%b %d %Y, %I:%M %P")%></p>
        </div>

        <div class="match-matchtime center">
          <p><%= link_to "Select", match, class: "button--selectmatch"%></p>
        </div>

      </div>
    </div>

  <% else %>
    <div class="matches-joined d-flex justify-content-evenly m-2">
      <div class="mt-2 flex-shrink-0">
        <div class ="ms-4 mt-4">
          <%= cl_image_tag match.photo.key, style: 'height:70px;width:70px;border-radius:50%;'%>
        </div>
      </div>

      <div class="flex-grow-1 mt-3">
        <div class="match-joined-title center mt-2">
          <h5><%= match.name %></h5>
        </div>

        <div class="match-matchtime center">
          <p style="color:#396BEE;" ><%= image_tag "calendar.png", {height: 20} %> <%= match.match_time.strftime("%b %d %Y, %I:%M %P")%></p>
        </div>

        <div class="match-matchtime center">
          <p><%= link_to "Select", match, class: "button--selectmatch"%></p>
        </div>
      </div>
    </div>

  <% end %>
<% end %>
</div>
