<div class="container">
<div class="d-flex center mt-2">
  <% if current_user == @match.organiser%>
    <h3>Your match</h3>
  <% else %>
    <h3><%= User.all.sample.nickname %>'s match </h3>
  <% end %>
</div>

<div class="card m-4card-pingpongtable-detail container">
  <div class="details--seemore mt-2">

      <div class="x--btn">
        <%= link_to matches_path do %>
          <p class="center" >X</p>
        <% end %>
      </div>
  </div>

  <div class="matches-organised">
   <div class="d-flex justify-content-around center mb-2">

        <% if current_user != @match.organiser %>
          <%= cl_image_tag @match.photo.key, style: 'height:50px;width:50px;border-radius:50%;' %>
        <% else %>
          <%= image_tag "profile.png", style: 'height:50px;width:50px;border-radius:50%;'%>
        <% end %>


      <div class="match-title">
        <h5><%= @match.name %></h5>
      </div>
    </div>
  </div>

  <div class="details--last">
    <%= @match.location %>
    <br>
    <%= @match.match_time.strftime("%b %d %Y, %I:%M %P") %>

      <% if current_user == @match.organiser %>
        <%= link_to "Edit", edit_match_path(@match), type:"button", class: "button--seemore center" %>
        <button class="button--cancel center" data-bs-toggle="modal" data-bs-target="#exampleModal">
          Delete
        </button>
      <% else @match.organiser != current_user %>
        <%= link_to "Join", join_match_path(@match), class: "button--seemore center", data: { turbo_method: :patch}%>
      <% end %>

  </div>

</div>
</div>

<!--Modal-->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header", style="background-color:#FF00F5">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Confirmation</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Back"></button>
      </div>
      <div class="modal-body text-center">
        <h3>Do you want to delete this match?</h3>
      </div>
      <div class="details--select center mb-3">
        <%= link_to "Delete", match_path(@match), type:"button", class: "button--cancel center", data: {turbo_method: :delete}  %>
      </div>
    </div>
  </div>
</div>
