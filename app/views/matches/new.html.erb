<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-2 mb-3">
        <div class="m-2">
          <div class="card-body">
            <h4 class="card-title text-center mb-3">New Activity</h4>
            <%= simple_form_for(@match) do |f| %>

              <% levels = [1,2,3,4,5] %>
              <div class="row mb-3">

              </div>
              <div class="col-md-12"><%= f.input :name %></div>
              <div class="col-md-12"><%= f.input :location %></div>
              <div class="col-md-12"><%= f.input :match_time, as: :string, input_html: { data: { controller: "datepicker" } } %></div>

              <div class="col-md-12"><%= f.input :equipment, :label => "What to bring" %></div>

              <div class="col-md-12"><%= f.submit "Save", class: "btn btn-primary" %></div>
              <%=link_to "Create", matches_path, data: { turbo_method: "post"}, class: "button--seemore" %>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
