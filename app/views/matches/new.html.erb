<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-2 mb-3">
        <div class="m-2">
          <div class="card-body">
            <h4 class="card-title text-center mb-3">Add a New Match üèì</h4>
            <%= simple_form_for(@match) do |f| %>
              <div class="row mb-3">
              </div>
              <div class="col-md-12"><%= f.input :name, label: "Match Title" %></div>
              <div class="col-md-12"><%= f.input :location, label: "Address" %></div>
              <div class="col-md-12"><%= f.input :match_time, as: :string, input_html: { data: { controller: "datepicker" } }, label: "Match Time" %></div>
              <div class="col-md-12"> Will you bring pingpong equipment? <%= f.input :equipment, label: "Yes" %> </div>
              <div class="col-md-12"><%= f.submit "Save", class: "btn btn-primary" %></div>
              <%# <%=link_to "Create", matches_path, data: { turbo_method: "post"}, class: "button--seemore" %>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
