<style>
  p { Font-size: 12px !important; }
  h5 { Font-size: 17px !important; }
</style>

<div class="center m-2">
  <h5 class="mt-3">Current Reservation</h5>
</div>

<div class="container">
  <% @reservations[0..0].each do |reservation| %>
    <div class="card-currentreservation d-flex justify-content-evenly">
      <div class="mt-2 flex-shrink-0">
        <div class ="ms-4 mt-4">
          <%= cl_image_tag reservation.pingpong_table.photo.key, style: 'height:70px;width:70px;border-radius:50%;' %>
        </div>
      </div>

      <div class="flex-grow-1 mt-3 me-2">
        <div class="match-title center mt-2">
          <h5><%= reservation.pingpong_table.name %></h5>
        </div>

        <div class="match-matchtime center">
          <p class="mt-2"><%= image_tag "calendar.png", {height: 20} %> <%= reservation.created_at.strftime("%b %d %Y, %H:%M %P") %></p>
        </div>

        <div class="match-matchtime center">
          <p><%= link_to "See more", reservation_path(reservation), class: "button--selectmatch" %></p>
        </div>

      </div>
    </div>
  </div>
  <% end %>
</div>

<div class="center m-2">
  <h5 class="mt-3">Old Reservations</h5>
</div>

  <% @reservations[1..@reservations.length].each do |reservation| %>
  <div class="container">
    <div class="matches-organised-old d-flex justify-content-evenly m-2">
      <div class="mt-2 flex-shrink-0">
        <div class="ms-4 mt-4">
          <%= cl_image_tag reservation.pingpong_table.photo.key, style: 'height:70px;width:70px;border-radius:50%;' %>
        </div>
      </div>

      <div class="flex-grow-1 mt-3">
        <div class="match-title center mt-2 me-2">
          <h5 style="color:black;"><%= reservation.pingpong_table.name %></h5>
        </div>

        <div class="match-matchtime center">
          <p style="color:black;"><%= image_tag "calendar_ended.png", {height: 20} %> <%= reservation.created_at.strftime("%b %d %Y, %H:%M %P") %></p>
        </div>

        <div class="match-matchtime center">
          <p><%= link_to "Ended", reservation_path(reservation), class: "button-ended" %></p>
        </div>
      </div>

    </div>
  </div>
</div>
<% end %>
