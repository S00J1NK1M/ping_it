<div class="container">
  <div class="d-flex text-center m-2">
    <h3>Ping it Reservations</h3>
  </div>
</div>

<% @reservations.each do |reservation| %>
  <div class="card text-center m-2">
    <div class="card-header">
      <h5><%= reservation.pingpong_table.name %></h5>
    </div>

    <div class="details--last ms-3 me-3">
      <%= reservation.created_at.strftime("%b %d %Y, %H:%M %P") %>
      <%= link_to "See more", reservation_path(reservation), class: "button--seemore center" %>
    </div>
  </div>
<% end %>
