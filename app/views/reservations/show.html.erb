  <div class="panel">
  <%= link_to "Start Game", play_pingpong_table_path(params[:pingpong_table_id], res:params[:id]), style: "color:black" %>
   <%#= @svg.html_safe %>
  <%# </div>
</div> %>


</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <%# <h1 class="modal-title fs-5" id="exampleModalLabel">Confermation</h1> %>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Back"></button>
      </div>
      <div class="modal-body" >
        Do you want to cancel this table?
      </div>
      <div class="modal-footer">
        <button type="button" class="cancel--btn front--size" data-bs-dismiss="modal">Back</button>
        <%= link_to "Cancel", cancel_reservation_path(params[:id]), class: "pink--btn center width", data: {turbo_method: :patch}  %>

      </div>
    </div>
  </div>
</div>
